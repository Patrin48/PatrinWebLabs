@model PatrinWebLabs.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}
<style type="text/css">
    .bs-example {
        margin: 20px;
    }
</style>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "bs-example text-danger" })
    <div class="bs-example">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Регистрация пользователя</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Rights, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                       @Html.DropDownList("Rights", new SelectList(new string[] { "Администратор", "Работник ОК", "Ремонтная служба", "Мастер" }), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Зарегистрироваться" />
                    </div>
                </div>
            </div>
        </div>
    </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
